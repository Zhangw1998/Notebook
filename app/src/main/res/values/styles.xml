<resources>

    <!--Activity / Fragment-->

    <style name="Widget.Theme.NoteBook.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="TextStyleRegular">
        <item name="fontFamily">@font/zcool_regular</item>
    </style>

    <!--ShapeImageView-->
    <style name="roundedCornerImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="leftRoundedCornerImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <style name="rightRoundedCornerImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>


    <!--TabLayout-->

    <style name="TabLayoutTextStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--TextStyle-->

    <style name="TitleTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="SubTitleTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/zcool_regular</item>
    </style>

    <style name="ContentTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/zcool_regular</item>
    </style>


    <style name="HintTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/zcool_regular</item>
    </style>

    <style name="bottom_normal_text">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/zcool_regular</item>
    </style>

    <style name="bottom_selected_text">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/zcool_regular</item>
    </style>

</resources>